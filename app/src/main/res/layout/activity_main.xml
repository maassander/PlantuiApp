<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView2"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:fillViewport="false"
        android:backgroundTint="@android:color/transparent">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="5"
            android:rowCount="5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/plantui"
                android:textSize="35sp"
                android:id="@+id/textView2"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_columnSpan="2" />

            <Button
                android:layout_width="74dp"
                android:layout_height="50dp"
                android:text="@string/red"
                android:textAllCaps="false"
                android:id="@+id/Btn_Red"
                android:layout_row="1"
                android:layout_column="0"
                android:background="@drawable/shapered"
                android:textColor="#1F1F1F"
                android:textSize="25sp"

                android:shadowColor="#9FA81B"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"/>

            <Space
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_row="1"
                android:layout_column="1" />

            <Button
                android:layout_width="74dp"
                android:layout_height="50dp"
                android:text="@string/blue"
                android:textAllCaps="false"
                android:id="@+id/Btn_Blue"
                android:layout_row="1"
                android:layout_column="2"
                android:background="@drawable/shapeblue"
                android:textColor="#1F1F1F"
                android:textSize="25sp"

                android:shadowColor="#9FA81B"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"/>

            <Space
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_row="1"
                android:layout_column="3" />

            <Button
                android:layout_width="74dp"
                android:layout_height="50dp"
                android:text="@string/green"
                android:textAllCaps="false"
                android:id="@+id/Btn_Green"
                android:layout_column="4"
                android:layout_row="1"
                android:background="@drawable/shapegreen"
                android:textColor="#1F1F1F"
                android:textSize="25sp"

                android:shadowColor="#9FA81B"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                />

            <SeekBar
                android:layout_width="77dp"
                android:layout_height="300dp"
                android:id="@+id/seekBar"
                android:rotation="270"
                android:layout_row="2"
                android:layout_column="0"
                android:progress="5"
                android:max="256"/>

            <SeekBar
                android:layout_width="87dp"
                android:layout_height="300dp"
                android:id="@+id/seekBar2"
                android:layout_row="2"
                android:rotation="270"
                android:layout_column="2"
                android:progress="5"
                android:max="256"/>

            <SeekBar
                android:layout_width="72dp"
                android:layout_height="300dp"
                android:id="@+id/seekBar3"
                android:layout_column="4"
                android:progress="5"
                android:max="256"

                android:rotation="270"
                android:layout_row="2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/redvalue"
                android:id="@+id/textView3"
                android:textStyle="italic"
                android:textColor="#000000"
                android:layout_row="3"
                android:layout_column="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/bluevalue"
                android:textStyle="italic"
                android:textColor="#000000"
                android:id="@+id/textView4"
                android:layout_row="3"
                android:layout_column="2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/greenvalue"
                android:textStyle="italic"
                android:id="@+id/textView5"
                android:layout_column="4"
                android:textColor="#000000"
                android:layout_row="3" />

            <Button
                android:layout_width="129dp"
                android:layout_height="wrap_content"
                android:id="@+id/BtnGoToBluetooth"
                android:text="@string/button_gotobluetoothmenu"
                android:background="@drawable/shape"
                android:textSize="15sp"

                android:layout_columnSpan="2"
                android:layout_row="4"
                android:layout_column="0" />


            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/Imghelpbutton"
                android:layout_column="4"
                android:background="@drawable/help"

                android:layout_row="4" />

            <Button
                android:layout_width="74dp"
                android:layout_height="50dp"
                android:text="@string/label_timer"
                android:textAllCaps="false"
                android:id="@+id/ButtonGoToTimer"
                android:layout_column="4"
                android:layout_row="0"
                android:background="@drawable/shape"
                />

        </GridLayout>
    </ScrollView>
</RelativeLayout>
